<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>switch.ac</path>

  <animation>
    <type>material</type>
    <object-name>Switch</object-name>
    <object-name>Circle</object-name>
    <object-name>SwitchNut</object-name>
    <object-name>SwitchRot</object-name>
    <emission>
      <red>   0.5 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>Switch</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
       <property>controls/engines/engine/ignition</property>
       <value>1</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/click</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>Switch</object-name>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
       <property>controls/engines/engine/ignition</property>
       <value>0</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Switch</object-name>
    <property>controls/engines/engine/ignition</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  -90 </dep></entry>
      <entry><ind> 1 </ind><dep>  90 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>  
    </center>
  </animation>

</PropertyList>








