<?xml version="1.0"?>

<PropertyList>
	
	
<animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>500</max-m>
    </animation>

<model>
		<name>Pylons</name>
		<path>Aircraft/UH-60/Models/Stores/pylons.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0.0</pitch-deg>
		</offsets>
	</model>	


<!-- payloads -->

	<model>
		<name>Ferry</name>
		<path>Aircraft/UH-60/Models/Stores/Ferry.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>Ferry</object-name>      
    <condition>
      <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>Ferry</value>
        </equals>
       
    </condition>
  </animation>			

  <model>
		<name>Troop_Transport</name>
		<path>Aircraft/UH-60/Models/Stores/seats.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>  0.00000 </y-m>
            <z-m>-0.1 </z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>Troop_Transport</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>Troop_Transport</value>
        </equals>
       
    </condition>
  </animation>	

  <model>
		<name>Troop_Transport_Extended</name>
		<path>Aircraft/UH-60/Models/Stores/troop-extend.xml</path>
		<offsets>
			<x-m> 0 </x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>Troop_Transport_Extended</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>Troop_Transport_Extended</value>
        </equals>
       
    </condition>
  </animation>
  
  <model>
		<name>CSAR</name>
		<path>Aircraft/UH-60/Models/Stores/csar.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>CSAR</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>CSAR</value>
        </equals>
       
    </condition>
  </animation>	


   <model>
		<name>CSAR_Extended</name>
		<path>Aircraft/UH-60/Models/Stores/csar-ext.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>CSAR_Extended</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>CSAR_Extended</value>
        </equals>
       
    </condition>
  </animation>	
  
  <model>
		<name>CAS-Hydra</name>
		<path>Aircraft/UH-60/Models/Stores/hydra.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>CAS-Hydra</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>CAS-Hydra</value>
        </equals>
       
    </condition>
  </animation>	
  
  
  <model>
		<name>AntiTank</name>
		<path>Aircraft/UH-60/Models/Stores/hellfire.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>AntiTank</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>AntiTank</value>
        </equals>
       
    </condition>
  </animation>	
  
   <model>
		<name>AntiTank</name>
		<path>Aircraft/UH-60/Models/Stores/hellfire.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>AntiTank</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>AntiTank</value>
        </equals>
       
    </condition>
  </animation>	
  
  
  <model>
		<name>CAS_Multirole</name>
		<path>Aircraft/UH-60/Models/Stores/multi.xml</path>
		<offsets>
			<x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>CAS_Multirole</object-name>      
    <condition>
     
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value>CAS_Multirole</value>
        </equals>
       
    </condition>
  </animation>	
  
  
  <animation>
  <type>select</type>
<object-name>pylon.C</object-name>  
  <condition>
  <or>
   <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>CAS_Multirole</value>
   </equals>
   <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>AntiTank</value>
   </equals>
   <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>CAS-Hydra</value>
   </equals>
   <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>CSAR_Extended</value>
   </equals>
    <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>CSAR</value>
   </equals>
    <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>Troop_Transport_Extended</value>
   </equals>
    <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>Troop_Transport</value>
   </equals>
    <equals>
    <property>sim/multiplay/generic/string[1]</property>
    <value>Ferry</value>
   </equals>
   
  
   
   
  </or>
  </condition>
 </animation>

</PropertyList>
